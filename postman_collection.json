{
  "info": {
    "name": "Document OCR API",
    "description": "API collection for OCR text extraction and document field extraction using Claude Haiku Vision",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "apiKey",
      "value": "your-api-key-here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            },
            "description": "Check the health status of the OCR service and verify EasyOCR and Tesseract availability.\n\nNo authentication required."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Document Extraction",
      "item": [
        {
          "name": "Extract Document Fields from Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text",
                "description": "API key for authentication"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "",
                  "description": "ID document image (PNG, JPG, JPEG, TIFF, BMP, WEBP)"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/ocr/extract/image",
              "host": ["{{baseUrl}}"],
              "path": ["ocr", "extract", "image"]
            },
            "description": "Extract structured fields from an ID document image using Claude Haiku Vision.\n\nExtracts: first_name, last_name, full_name, document_number, date_of_birth, issue_date, expiry_date, gender, address\n\nRequired fields: first_name, last_name, document_number, date_of_birth, expiry_date\n\nReturns success=false if required fields are missing."
          },
          "response": []
        }
      ]
    },
    {
      "name": "OCR",
      "item": [
        {
          "name": "Extract Text from Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text",
                "description": "API key for authentication"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "",
                  "description": "Image file (PNG, JPG, JPEG, TIFF, BMP, WEBP)"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/ocr/image?languages=en",
              "host": ["{{baseUrl}}"],
              "path": ["ocr", "image"],
              "query": [
                {
                  "key": "languages",
                  "value": "en",
                  "description": "Comma-separated language codes (e.g., 'en,fr,de')"
                }
              ]
            },
            "description": "Extract raw text from an uploaded image using EasyOCR.\n\nSupported formats: PNG, JPG, JPEG, TIFF, BMP, WEBP\n\nReturns extracted text with confidence scores and bounding boxes."
          },
          "response": []
        },
        {
          "name": "Extract Text from PDF",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text",
                "description": "API key for authentication"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "",
                  "description": "PDF file to process"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/ocr/pdf?force_ocr=false",
              "host": ["{{baseUrl}}"],
              "path": ["ocr", "pdf"],
              "query": [
                {
                  "key": "force_ocr",
                  "value": "false",
                  "description": "Force OCR even if PDF contains text (use true for scanned documents)"
                }
              ]
            },
            "description": "Extract text from an uploaded PDF using OCRmyPDF/Tesseract.\n\nSet force_ocr=true to process scanned documents.\n\nReturns extracted text per page with metadata."
          },
          "response": []
        },
        {
          "name": "Extract Text from PDF (Force OCR)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text",
                "description": "API key for authentication"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "",
                  "description": "Scanned PDF file to process"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/ocr/pdf?force_ocr=true",
              "host": ["{{baseUrl}}"],
              "path": ["ocr", "pdf"],
              "query": [
                {
                  "key": "force_ocr",
                  "value": "true",
                  "description": "Force OCR for scanned documents"
                }
              ]
            },
            "description": "Extract text from a scanned PDF using OCRmyPDF/Tesseract with forced OCR.\n\nUse this for scanned documents or image-based PDFs."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Documentation",
      "item": [
        {
          "name": "API Root",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            },
            "description": "Get API information and available endpoints."
          },
          "response": []
        },
        {
          "name": "Swagger UI",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/docs",
              "host": ["{{baseUrl}}"],
              "path": ["docs"]
            },
            "description": "Interactive Swagger UI documentation."
          },
          "response": []
        }
      ]
    }
  ]
}
